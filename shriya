cin>>value;
if(value==1)
{
cout<<"enter value 1"<<endl;
cin>>a;
cout<<"enter value 1"<<endl;
cin>>b;
sum=a*b;
cout<<sum<<endl;
}
if(value==2)
{
cout<<"enter value 1"<<endl;
cin>>a;
cout<<"enter value 1"<<endl;
cin>>b;
sum=a-b;
cout<<sum<<endl;
}
if(value==3)
{
cout<<"enter value 1"<<endl;
cin>>a;
cout<<"enter value 1"<<endl;
cin>>b;
sum=a/b;
cout<<sum<<endl;
}
if(value==4)
{
cout<<"enter value 1"<<endl;
cin>>a;
cout<<"enter value 1"<<endl;
cin>>b;
sum=a+b;
cout<<sum<<endl; }
}

